<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/cusine"
        android:label="@string/app_name"
        android:roundIcon="@drawable/cusine"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication">
        <activity android:name=".view.AddMenuActivity"></activity>
        <activity android:name=".view.DescriptionActivity" />
        <activity
            android:name=".view.HomeActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".view.Settings" />
        <activity
            android:name=".view.ChangePassword"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".view.ForgotPassword"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".view.Login"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".view.Register"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".view.RecipeDetail" />
        <activity android:name=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>