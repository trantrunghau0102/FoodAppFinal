<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5.386"
    tools:context=".view.Register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.07"
        android:background="@drawable/ic_manager"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1.07">

        <ImageView
            android:id="@+id/imgBackChangePass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/work_sans_semibold"
            android:paddingLeft="100dp"
            android:text="Đổi mật khẩu"
            android:textStyle="bold"
            android:textColor="@color/logo_color"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="30dp">

        <EditText
            android:id="@+id/forgot_edit_txt_current_passwword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/edit_txt_register"
            android:fontFamily="@font/roboto"
            android:hint="Mật khẩu hiện tại"
            android:paddingLeft="20dp"
            android:textColorHint="#023047"
            android:textSize="13sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:gravity="center_horizontal"
            android:text=""
            android:textColor="#023047"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/forgot_edit_txt_new_passwword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/edit_txt_register"
            android:fontFamily="@font/roboto"
            android:hint="Mật khẩu mới"
            android:paddingLeft="20dp"
            android:textColorHint="#023047"
            android:textSize="13sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:gravity="center_horizontal"
            android:text=""
            android:textColor="#023047"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/reg_edit_txt_confirm_new_passwword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/edit_txt_register"
            android:fontFamily="@font/roboto"
            android:hint="Xác nhận mật khẩu mới"
            android:paddingLeft="20dp"
            android:textColorHint="#023047"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/forgot_btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_login_login"
            android:fontFamily="@font/roboto_bold"
            android:text="Lưu"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>